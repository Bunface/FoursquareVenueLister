<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/paddingX"
    android:layout_marginEnd="@dimen/paddingX"
    android:layout_marginBottom="@dimen/paddingY"
    android:layout_marginTop="@dimen/paddingY">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/VenueDetailNameTextView"
                android:layout_width="@dimen/title_length"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="@dimen/TitleTextSize"
                tools:context=".VenueDetailFragment" />

            <ImageView
                android:id="@+id/VenueDetailVerificationImageView"
                android:layout_width="@dimen/TitleHeight"
                android:layout_height="@dimen/TitleHeight"
                android:layout_gravity="center"
                android:src="@drawable/tick"
                android:visibility="invisible"
                tools:context=".VenueDetailFragment" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/VenueDetailDetailsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/VenueDetailRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:saveEnabled="true"
                android:isIndicator="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/paddingY"
                android:layout_marginBottom="@dimen/paddingY">

                <ImageView
                    android:layout_width="@dimen/icon_size_blue"
                    android:layout_height="@dimen/icon_size_blue"
                    android:layout_gravity="center_vertical"
                    android:src = "@drawable/time"/>
                <TextView
                    android:id="@+id/VenueDetailHoursTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/MediumTextSize"
                    tools:context=".VenueDetailFragment"
                    android:layout_margin="@dimen/paddingX"
                    android:gravity="center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/paddingY"
                android:layout_marginBottom="@dimen/paddingY">

                <ImageView
                    android:layout_width="@dimen/icon_size_blue"
                    android:layout_height="@dimen/icon_size_blue"
                    android:layout_gravity="center_vertical"
                    android:src = "@drawable/location"/>
                <TextView
                    android:id="@+id/VenueDetailLocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/MediumTextSize"
                    tools:context=".VenueDetailFragment"
                    android:layout_margin="@dimen/paddingX"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/paddingY"
                android:layout_marginBottom="@dimen/paddingY">

                <ImageView
                    android:layout_width="@dimen/icon_size_blue"
                    android:layout_height="@dimen/icon_size_blue"
                    android:layout_gravity="center_vertical"
                    android:src = "@drawable/earthgrid"/>
                <TextView
                    android:id="@+id/VenueDetailURLTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/MediumTextSize"
                    tools:context=".VenueDetailFragment"
                    android:layout_margin="@dimen/paddingX"
                    android:textStyle="italic"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/paddingY"
                android:layout_marginBottom="@dimen/paddingY">

                <ImageView
                    android:layout_width="@dimen/icon_size_blue"
                    android:layout_height="@dimen/icon_size_blue"
                    android:layout_gravity="center_vertical"
                    android:src = "@drawable/phone"/>

                <TextView
                    android:id="@+id/VenueDetailPhoneTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/MediumTextSize"
                    tools:context=".VenueDetailFragment"
                    android:layout_margin="@dimen/paddingX"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/paddingY"
                android:layout_marginBottom="@dimen/paddingY">

                <ImageView
                    android:layout_width="@dimen/icon_size_blue"
                    android:layout_height="@dimen/icon_size_blue"
                    android:layout_gravity="center_vertical"
                    android:src = "@drawable/more"/>

                <TextView
                    android:id="@+id/VenueDetailDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/MediumTextSize"
                    tools:context=".VenueDetailFragment"
                    android:layout_margin="@dimen/paddingX"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/VenueDetailIconsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginBottom="@dimen/bigPaddingY"
                android:layout_marginTop="@dimen/paddingY">

                <ImageView
                    android:id="@+id/VenueDetailIcon1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fragment_venue_detail_photos"
                    android:layout_weight="1"
                    tools:context=".VenueDetailFragment"
                    android:visibility="invisible"
                    android:background="@color/colorAccent"
                    android:layout_marginEnd="@dimen/paddingX"/>

                <ImageView
                    android:id="@+id/VenueDetailIcon2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fragment_venue_detail_photos"
                    android:layout_weight="1"
                    tools:context=".VenueDetailFragment"
                    android:visibility="invisible"
                    android:background="@color/colorAccent"
                    android:layout_marginStart="@dimen/paddingX"
                    android:layout_marginEnd="@dimen/paddingX"/>

                <ImageView
                    android:id="@+id/VenueDetailIcon3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fragment_venue_detail_photos"
                    android:layout_weight="1"
                    tools:context=".VenueDetailFragment"
                    android:visibility="invisible"
                    android:background="@color/colorAccent"
                    android:layout_marginStart="@dimen/paddingX"
                    android:layout_marginEnd="@dimen/paddingX"/>

                <ImageView
                    android:id="@+id/VenueDetailIcon4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fragment_venue_detail_photos"
                    android:layout_weight="1"
                    tools:context=".VenueDetailFragment"
                    android:visibility="invisible"
                    android:background="@color/colorAccent"
                    android:layout_marginStart="@dimen/paddingX"/>

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/venue_detail_pictures_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/VenueDetailPhoto1"
                        android:layout_height="match_parent"
                        android:layout_width = "wrap_content"
                        tools:context=".VenueDetailFragment"
                        android:visibility="invisible"
                        android:layout_marginEnd="@dimen/paddingX"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:adjustViewBounds="true"/>

                    <ImageView
                        android:id="@+id/VenueDetailPhoto2"
                        android:layout_height="match_parent"
                        android:layout_width = "wrap_content"
                        tools:context=".VenueDetailFragment"
                        android:visibility="invisible"
                        android:layout_marginStart="@dimen/paddingX"
                        android:layout_marginEnd="@dimen/paddingX"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:adjustViewBounds="true"/>

                    <ImageView
                        android:id="@+id/VenueDetailPhoto3"
                        android:layout_height="match_parent"
                        android:layout_width = "wrap_content"
                        tools:context=".VenueDetailFragment"
                        android:visibility="invisible"
                        android:layout_marginStart="@dimen/paddingX"
                        android:layout_marginEnd = "@dimen/paddingX"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:adjustViewBounds="true"/>

                    <ImageView
                        android:id="@+id/VenueDetailPhoto4"
                        android:layout_height="match_parent"
                        android:layout_width = "wrap_content"
                        tools:context=".VenueDetailFragment"
                        android:visibility="invisible"
                        android:layout_marginStart="@dimen/paddingX"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:adjustViewBounds="true"/>

                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/SmallTextSize"
                android:layout_marginTop="@dimen/paddingYbig"
                tools:context=".VenueDetailFragment"
                android:text="@string/icon_credit"/>





        </LinearLayout>

    </LinearLayout>