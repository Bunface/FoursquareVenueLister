<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/VenueItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/paddingY"
    android:paddingLeft="@dimen/paddingX"
    android:paddingRight="@dimen/paddingX"
    android:paddingTop="@dimen/paddingY"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingX"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/VenueItemNameTextView"
            android:textSize="@dimen/rec_view_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>